pipeline {
  environment {
    registry = "nadellavamsee/jenkins-demo"
/*   registryCredential = ‘docker-id’ */
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/nadellavamsee/jenkins.git'
      }
    }
    stage('Building image') {
      steps{
        script {
           bat 'docker build -t nadellavamsee/jenkinsdemo:build . ' 
/*         docker.build registry + ":$BUILD_NUMBER" */
        }
      }
    }
  }
}
stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry([ credentialsId: "dockerid", url: " " ]) {
           bat "docker push nadellavamsee/jenkinsdemo:build"
/*#           app.push("${env.BUILD_NUMBER}")*/
/*#            app.push("latest")*/
 	 }
        }
      }
    }
